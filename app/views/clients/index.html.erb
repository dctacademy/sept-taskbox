<h2>Listing Clients</h2>
<p>Total Clients : <%= @clients.size %></p>
<!-- new_client_path will return a string "/clients/new"  -->

<%= link_to "Add Client", new_client_path %>

<ol>
	<% @clients.each do |client| %>
		<li><%= link_to client.name, client_path(client.id) %>
			
			<%= link_to "show", client_path(client.id) %>
		</li>
	<% end %>
</ol>

<% data = {} %>
<% @clients.each do |client| %>
	<% data[client.name] = client.projects.size %>
<% end %>

<%# column_chart(data) %>
<%= bar_chart(data) %>